<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

	<!-- Default Main Template -->
	<definition name="master"
		template="/WEB-INF/views/layout/master-layout.jsp">
		<put-attribute name="sidebar"
			value="/WEB-INF/views/layout/sidebar.jsp" />
		<put-attribute name="top-nav"
			value="/WEB-INF/views/layout/top-nav.jsp" />
		<put-attribute name="body"
			value="/WEB-INF/views/layout/body.jsp" />
		<put-attribute name="footer"
			value="/WEB-INF/views/layout/footer.jsp" />
	</definition>

	<definition name="index" extends="master">
		<put-attribute name="body"
			value="/WEB-INF/views/index.jsp" />
	</definition>

	<definition name="access-denied"
		template="/WEB-INF/views/error-page/access-denied.jsp"></definition>

	<definition name="category-action" extends="master">
		<put-attribute name="body"
			value="/WEB-INF/views/category/category-action.jsp" />
	</definition>

	<definition name="category-list" extends="master">
		<put-attribute name="body"
			value="/WEB-INF/views/category/category-list.jsp" />
	</definition>

	<definition name="productInfo-action" extends="master">
		<put-attribute name="body"
			value="/WEB-INF/views/product-info/productInfo-action.jsp" />
	</definition>

	<definition name="productInfo-list" extends="master">
		<put-attribute name="body"
			value="/WEB-INF/views/product-info/productInfo-list.jsp" />
	</definition>

	<definition name="productInStock-list" extends="master">
		<put-attribute name="body"
			value="/WEB-INF/views/product-in-stock/productInStock-list.jsp" />
	</definition>

	<definition name="history" extends="master">
		<put-attribute name="body"
			value="/WEB-INF/views/history/history.jsp" />
	</definition>

	<definition name="goods-receipt-list" extends="master">
		<put-attribute name="body"
			value="/WEB-INF/views/invoice/goods-receipt-list.jsp" />
	</definition>

	<definition name="goods-receipt-action" extends="master">
		<put-attribute name="body"
			value="/WEB-INF/views/invoice/goods-receipt-action.jsp" />
	</definition>
	
	<definition name="goods-issue-list" extends="master">
		<put-attribute name="body"
			value="/WEB-INF/views/invoice/goods-issue-list.jsp" />
	</definition>

	<definition name="goods-issue-action" extends="master">
		<put-attribute name="body"
			value="/WEB-INF/views/invoice/goods-issue-action.jsp" />
	</definition>
</tiles-definitions>